--- sle11sp2-2011-10-17.orig/drivers/hwmon/coretemp-xen.c	2011-10-17 12:31:19.000000000 +0200
+++ sle11sp2-2011-10-17/drivers/hwmon/coretemp-xen.c	2011-10-17 12:31:52.000000000 +0200
@@ -605,7 +605,12 @@ static int create_core_data(struct platf
 	err = rdmsr_safe_on_pcpu(cpu, tdata->intrpt_reg, &eax, &edx);
 	if (err >= 0) {
 		tdata->attr_size += MAX_THRESH_ATTRS;
-		tdata->ttarget = tdata->tjmax - ((eax >> 16) & 0x7f) * 1000;
+		tdata->tmin = tdata->tjmax -
+			      ((eax & THERM_MASK_THRESHOLD0) >>
+			       THERM_SHIFT_THRESHOLD0) * 1000;
+		tdata->ttarget = tdata->tjmax -
+				 ((eax & THERM_MASK_THRESHOLD1) >>
+				  THERM_SHIFT_THRESHOLD1) * 1000;
 	}
 
 	pdata->core_data[attr_no] = tdata;
