+					sysfs_unlink_rdev(mddev, rdev);
+					rdev->raid_disk = -1;
+					removed++;
+				}
+				clear_bit(RemoveSynchronised, &rdev->flags);
+			}
+		synchronize_rcu();
+		/* Now any temp reference that was taken is released */
+	}
