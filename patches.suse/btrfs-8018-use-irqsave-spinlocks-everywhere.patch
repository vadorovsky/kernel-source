 static int try_worker_shutdown(struct btrfs_worker_thread *worker)
 {
 	int freeit = 0;
+	unsigned long flags;
 
-	spin_lock_irq(&worker->lock);
+	spin_lock_irqsave(&worker->lock, flags);
 	spin_lock(&worker->workers->lock);
 	if (worker->workers->num_workers > 1 &&
