+++ b/arch/powerpc/include/asm/paca.h
@@ -60,8 +60,7 @@ struct paca_aux_struct {
 	 */
 	u64 exrfi[EX_SIZE] __aligned(0x80);
 	void *rfi_flush_fallback_area;
-	u64 l1d_flush_congruence;
-	u64 l1d_flush_sets;
+	u64 l1d_flush_size;
 };
 #endif
 
