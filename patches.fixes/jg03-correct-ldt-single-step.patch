 	 */
 	if ((seg & SEGMENT_TI_MASK) == SEGMENT_LDT) {
 		struct desc_struct *desc;
+		struct ldt_struct *ldt;
 		unsigned long base;
 
-		seg &= ~7UL;
+		seg >>= 3;
 
 		mutex_lock(&child->mm->context.lock);
-		if (unlikely(!child->mm->context.ldt ||
-			     (seg >> 3) >= child->mm->context.size))
+		ldt = child->mm->context.ldt;
