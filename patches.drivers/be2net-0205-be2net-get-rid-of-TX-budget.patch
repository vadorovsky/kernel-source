 		aic->enable = true;
@@ -2390,20 +2389,19 @@ static inline void lancer_update_tx_err(
 	}
 }
 
-static bool be_process_tx(struct be_adapter *adapter, struct be_tx_obj *txo,
-			  int budget, int idx)
