 				iovPtr = (struct IOV_111 *)((unsigned char *)ctrl_info + IOV_111_OFFSET);
 				instance->requestorId = iovPtr->requestorId;
 			}
-			printk(KERN_WARNING "megaraid_sas: I am VF "
