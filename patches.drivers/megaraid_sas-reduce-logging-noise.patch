-        /*
-	* Setup tasklet for cmd completion
-	*/
+	/*
+	 * Setup tasklet for cmd completion
+	 */
 
 	tasklet_init(&instance->isr_tasklet, instance->instancet->tasklet,
 		(unsigned long)instance);
