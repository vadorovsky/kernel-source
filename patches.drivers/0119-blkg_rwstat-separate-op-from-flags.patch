 		WARN_ON(!cfqq->prio_pending);
 		cfqq->prio_pending--;
@@ -2557,7 +2565,7 @@ static void cfq_merged_request(struct request_queue *q, struct request *req,
 static void cfq_bio_merged(struct request_queue *q, struct request *req,
