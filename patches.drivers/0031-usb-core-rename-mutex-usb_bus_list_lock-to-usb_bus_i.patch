index ad153e4..a768fd9 100644
--- a/include/linux/usb/hcd.h
+++ b/include/linux/usb/hcd.h
@@ -636,7 +636,7 @@ extern void usb_set_device_state(struct usb_device *udev,
 /* exported only within usbcore */
 
