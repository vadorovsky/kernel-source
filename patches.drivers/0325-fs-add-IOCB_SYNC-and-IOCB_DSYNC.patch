 			written = 0;
 	}
diff --git a/fs/udf/file.c b/fs/udf/file.c
index 8d67d86..83e0916 100644
--- a/fs/udf/file.c
+++ b/fs/udf/file.c
@@ -152,7 +152,7 @@ out:
 
 	if (retval > 0) {
 		mark_inode_dirty(inode);
-		err = generic_write_sync(file, iocb->ki_pos - retval, retval);
