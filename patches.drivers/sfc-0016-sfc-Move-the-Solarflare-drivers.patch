- *
- * For example, a field with width 5 would have a mask of 0x1f.
- *
- * The maximum width mask that can be generated is 64 bits.
- */
-#define EFX_MASK64(width)			\
-	((width) == 64 ? ~((u64) 0) :		\
-	 (((((u64) 1) << (width))) - 1))
