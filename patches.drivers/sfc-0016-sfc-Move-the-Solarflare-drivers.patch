-static int efx_pm_poweroff(struct device *dev)
-{
-	struct pci_dev *pci_dev = to_pci_dev(dev);
-	struct efx_nic *efx = pci_get_drvdata(pci_dev);
-
-	efx->type->fini(efx);
-
-	efx->reset_pending = 0;
-
-	pci_save_state(pci_dev);
-	return pci_set_power_state(pci_dev, PCI_D3hot);
