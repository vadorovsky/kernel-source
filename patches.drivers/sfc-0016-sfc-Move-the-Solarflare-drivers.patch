- **************************************************************************/
-
-static unsigned irq_mod_ticks(int usecs, int resolution)
-{
-	if (usecs <= 0)
-		return 0; /* cannot receive interrupts ahead of time :-) */
-	if (usecs < resolution)
-		return 1; /* never round down to 0 */
-	return usecs / resolution;
-}
