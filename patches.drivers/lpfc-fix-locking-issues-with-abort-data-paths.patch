 		iabt->ulpCommand = CMD_ABORT_XRI_CN;
@@ -9774,6 +9789,11 @@ lpfc_sli_abort_iotag_issue(struct lpfc_hba *phba, struct lpfc_sli_ring *pring,
 			 abtsiocbp->iotag);
 
 	if (phba->sli_rev == LPFC_SLI_REV4) {
