+	u16 vid = 0xffff;
+	int err;
 
 	if (unlikely(ring > adapter->max_rds_rings))
 		return NULL;
@@ -1687,12 +1708,6 @@ qlcnic_83xx_process_lro(struct qlcnic_ad
 	if (!skb)
